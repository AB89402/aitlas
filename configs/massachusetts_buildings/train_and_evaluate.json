            "pretrained": true
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainAndEvaluateTask",
          "config": {
              "epochs": 100,
              "model_directory": "examples/experiments/",
              "save_epochs": 10,
              "id": "massachusetts_buildings",
              "train_dataset_config":{
                  "classname": "aitlas.datasets.MassachusettsBuildingsDataset",
                  "config": {
                      "batch_size": 8,
                      "shuffle": true,
