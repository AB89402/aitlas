{
    "model": {
        "classname": "aitlas.models.ResNet50",
        "config": {
            "num_classes": 10,
            "pretrained": true,
            "metrics": ["f1_score", "accuracy", "iou"]
        }
    },
    "task": {
        "classname": "aitlas.tasks.OptimizeTask",
        "config": {
            "steps": 10,
            "method": "grid",
            "parameters": [
                {
                    "name": "learning_rate",
                    "range": [0.01, 0.001]
                },
                {
                    "name": "weight_decay",
                    "range": [0.01, 0.001]
                }
            ],
            "epochs": 1,
            "model_directory": "./experiment/eurosat_optimize",
            "id": "eurosat_optimize",
            "train_dataset_config":{
                "classname": "aitlas.datasets.EurosatDataset",
                "config": {
                    "batch_size": 64,
                    "shuffle": true,
                    "num_workers": 4,
                    "data_dir": "./data/EuroSAT/2750",
                    "csv_file": "./data/EuroSAT/train.csv",
                    "transforms": ["aitlas.transforms.ResizeCenterCropFlipHVToTensor"]
                }
            },
            "val_dataset_config":{
                  "classname": "aitlas.datasets.EurosatDataset",
                  "config": {
                      "batch_size": 16,
                      "shuffle": false,
                      "num_workers": 4,
                      "data_dir": "./data/EuroSAT/2750",
                      "csv_file": "./data/EuroSAT/val.csv",
                      "transforms": ["aitlas.transforms.ResizeCenterCropToTensor"]
                  }
            }
        }
    }
}
