                      "csv_file_path": "/home/dkocev/data/MassachusettsBuildings/train.txt",
                      "dir_path": "/home/dkocev/data/MassachusettsBuildings/train_splits",
                      "transforms": ["aitlas.transforms.MinMaxNormTransponse"],
                      "target_transforms": ["aitlas.transforms.Transponse"]
                  }
              },
              "val_dataset_config":{
                    "classname": "aitlas.datasets.MassachusettsBuildingsDataset",
                    "config": {
                        "batch_size": 1,
                        "shuffle": false,
                        "num_workers": 1,
                        "csv_file_path": "/home/dkocev/data/MassachusettsBuildings/val.txt",
                        "dir_path": "/home/dkocev/data/MassachusettsBuildings/val_splits",
                        "transforms": ["aitlas.transforms.MinMaxNormTransponse"],
                        "target_transforms": ["aitlas.transforms.Transponse"]
                    }
              }
