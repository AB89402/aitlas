{
    "dataset": {
        "classname": "aitlas.datasets.BigEarthNetDataset",
        "config": {
            "lmdb_path": "./data/lmdb",
            "import_to_lmdb": false,
            "override": false,
            "split": {
                "train": {
                    "ratio": 50,
                    "file": "./data/train.csv"
                },
                "val": {
                    "ratio": 25,
                    "file": "./data/val.csv"
                },
                "test": {
                    "ratio": 25,
                    "file": "./data/test.csv"
                }
            },
            "root": "./data/BigEarthNet"
        }
    },
    "task": {
        "classname": "aitlas.tasks.ExportSplitsTask",
        "config": {
            "train_export": "./data/train_export.csv",
            "val_export": "./data/val_export.csv",
            "test_export": "./data/test_export.csv"
        }
    }
  }
