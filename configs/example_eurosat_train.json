{
    "model": {
        "classname": "aitlas.models.CifarModel",
        "config": {
            "num_classes": 10,
            "learning_rate": 0.001
        }
    },
    "dataset": {
        "classname": "aitlas.datasets.EurosatDataset",
        "config": {
            "split": {
                "override": true,
                "train": {
                    "ratio": 60,
                    "file": "./data/train.csv"
                },
                "val": {
                    "ratio": 20,
                    "file": "./data/val.csv"
                },
                "test": {
                    "ratio": 20,
                    "file": "./data/test.csv"
                }
            }
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainTask",
        "config": {
            "epochs": 100,
            "model_directory": "./examples/experiment",
            "save_epochs": 10
        }
    }
  }
