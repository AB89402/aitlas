{
    "model": {
        "classname": "aitlas.models.ShallowCNNNet",
        "config": {
            "num_classes": 10,
            "learning_rate": 0.001
        }
    },
    "dataset": {
        "classname": "aitlas.datasets.EurosatDataset",
        "config": {
            "mode": "rgb",
            "root": "./data/EuroSAT/2750",
            "override": false,
            "split": {
                "train": {
                    "ratio": 80,
                    "file": "./data/train.csv"
                },
                "val": {
                    "ratio": 10,
                    "file": "./data/val.csv"
                },
                "test": {
                    "ratio": 10,
                    "file": "./data/test.csv"
                }
            }
        }
    },
    "task": {
        "classname": "aitlas.tasks.EvaluateTask",
        "config": {
             "model_path": "./examples/experiment/checkpoint.pth.tar",
             "metrics":["accuracy","precision", "recall", "f1_score"]
        }
    }
  }
