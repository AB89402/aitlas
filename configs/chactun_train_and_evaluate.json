{
    "model": {
        "classname": "aitlas.models.DeepLabV3",
        "config": {
            "num_classes": 3,
            "learning_rate": 0.0001,
            "pretrained": true
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainAndEvaluateTask",
          "config": {
              "epochs": 10,
              "model_directory": "examples/experiments/",
              "save_epochs": 5,
              "id": "chactun",
              "train_dataset_config":{
                  "classname": "aitlas.datasets.ChactunDataset",
                  "config": {
                      "batch_size": 4,
                      "shuffle": true,
                      "num_workers": 1,
                      "root": "/media/hdd/Chactun/train",
                      "transforms": ["aitlas.transforms.BaseSegmentationModified"]
                  }
              },
              "val_dataset_config":{
                    "classname": "aitlas.datasets.ChactunDataset",
                    "config": {
                        "batch_size": 1,
                        "shuffle": false,
                        "num_workers": 1,
                        "root": "/media/hdd/Chactun/val",
                        "transforms": ["aitlas.transforms.BaseSegmentationModified"]
                    }
              }
        }
    }
}
