{
    "model": {
        "classname": "aitlas.models.DeepLabV3",
        "config": {
            "num_classes": 1,
            "learning_rate": 0.001,
            "use_cuda": true
        }
    },
    "dataset": {
        "classname": "aitlas.datasets.CrackForestDataset",
        "config": {
            "batch_size": 2,
            "root": "./data/CrackForest",
            "override": false,
            "split": {
                "train": {
                    "ratio": 80,
                    "file": "./data/train_crack.csv"
                },
                "val": {
                    "ratio": 10,
                    "file": "./data/val_crack.csv"
                },
                "test": {
                    "ratio": 10,
                    "file": "./data/test_crack.csv"
                }
            }
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainTask",
        "config": {
            "epochs": 100,
            "model_directory": "./examples/experiment",
            "save_epochs": 10
        }
    }
  }
